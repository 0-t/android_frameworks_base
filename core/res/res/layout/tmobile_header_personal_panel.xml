<?xml version="1.0" encoding="utf-8"?>
<merge
	xmlns:android="http://schemas.android.com/apk/res/android">

	<FrameLayout
		android:paddingRight="8dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">

		<ImageView
			android:id="@+id/headerIcon"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:scaleType="center" />

		<ImageView
			android:id="@+id/header2Icon"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="bottom|right"
			android:layout_margin="3dp" />
	</FrameLayout>

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="wrap_content"
		android:id="@+id/innerLayout1"
		android:layout_height="wrap_content">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLabelPersonalHeader"
			android:singleLine="true"
			android:id="@+id/headerId" />

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:id="@+id/innerLayout2"
			android:layout_height="wrap_content">

			<ImageView
				android:id="@+id/header3Icon"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingRight="6dp" />

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceLabelPersonalSubHeader"
				android:singleLine="true"
				android:id="@+id/subHeaderId1" />

		</LinearLayout>

	</LinearLayout>
</merge>
	