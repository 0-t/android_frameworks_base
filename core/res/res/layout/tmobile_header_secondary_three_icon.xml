<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="left" 
		android:id="@+id/innerLayout"
		>

		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="vertical" 
			android:layout_width="wrap_content"
			android:gravity="left" 
			android:id="@+id/innerLayout" 
			android:layout_weight="1.0"
			android:layout_height="wrap_content">
			<TextView android:layout_width="wrap_content"
				android:gravity="left" 
				android:layout_height="wrap_content"
				style="@style/HeaderTextLabel"
				android:id="@+id/headerId" />

			<TextView android:layout_width="wrap_content"
				android:gravity="left" 
				android:layout_height="wrap_content"
				style="@style/SubHeaderTextLabel"
				android:id="@+id/subHeaderId1" />
		</LinearLayout>

		<ImageView android:id="@+id/headerIcon1"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			style="@style/HeaderSecondaryThreeIcon" 
			/>

		<ImageView android:id="@+id/headerIcon2"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			style="@style/HeaderSecondaryThreeIcon" 
			/>

		<ImageView android:id="@+id/headerIcon3"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			style="@style/HeaderSecondaryThreeIcon" 
			/>
	</LinearLayout>
</merge>
